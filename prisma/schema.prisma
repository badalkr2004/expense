generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime @default(now())
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  expenses Expense[]
}
